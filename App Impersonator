/*creating a database on my favorite app that stores data from users*/

/*creating the table*/
CREATE TABLE afk_arena (player_id INTEGER PRIMARY KEY, 
profile_name TEXT,
diamonds INTEGER,
coins INTEGER,
high_score INTEGER,
hours_played INTEGER
);

INSERT INTO afk_arena VALUES (1, "DerekTheGod", 100, 50, 10, 5);
